server {
	listen       80;
    server_name  pedrocadete.fr;
    root         /var/www/pedrocadete/;

    access_log /var/log/nginx/pedrocadete.fr.access.log;
    error_log /var/log/nginx/pedrocadete.fr.error.log;

    # Static
    location / {
        index  index.html index.htm index.php;
    }

    # PHP scripts -> PHP-FPM server listening on 127.0.0.1:9000
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass   127.0.0.1:9000;
        fastcgi_index  index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
 	}

	# Security
        location ~ /\.ht {
            deny  all;
    }

	# Stuffs
	location = /favicon.ico {
		access_log	 off;
		return	 204;
	}

	location ~* ^.+\.(jpg|jpeg|gif|css|png|js|xml)$ {
		expires 	30d;
		#access_log	off;
	}
}
